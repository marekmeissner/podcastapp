{
  "name": "backend",
  "version": "1.0.0",
  "description": "podcaster-backend",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./dist/main.js | pino-pretty",
    "start:dev": "nodemon dist/main.js --watch ./dist --delay 2 | pino-pretty",
    "test": "mocha --delay --require ts-node/register ./test/main.test.ts --recursive './src/**/*test.ts' | pino-pretty",
    "watch": "tsc -w -p tsconfig.prod.json",
    "seed": "run () { ts-node -P ./tsconfig.json ./seed/main.ts $@ | pino-pretty; }; run",
    "lint": "npx eslint src/** seed/** test/** --ext .ts --fix"
  },
  "author": "Redvike",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^5.6.2",
    "ajv": "^6.10.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.20.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pino": "^5.13.2",
    "pino-pretty": "^3.2.1",
    "typegoose": "^5.9.0"
  },
  "devDependencies": {
    "@sentry/types": "^5.6.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.5",
    "@types/helmet": "0.0.44",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.15",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/pino": "^5.8.9",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "faker": "^4.1.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "sinon": "^7.4.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
